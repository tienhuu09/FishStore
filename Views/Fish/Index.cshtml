@model IEnumerable<FishStore.Models.Fish>

@{
    ViewData["Title"] = "Index";
}

<h1>Fish</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>@item.Genre</td>
            <td>@item.Gender</td>
            <td>@item.Price</td>
            <td>
                <img src="~/images/@item.ProfilePicture"
                     class=""
                     height="100" width="100"
                     asp-append-version="true" />
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Chi Tiết</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>

        </tr>

        }
    </tbody>
</table>
